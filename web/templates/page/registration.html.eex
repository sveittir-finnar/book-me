<h2>Create an account</h2>

<form accept-charset="UTF-8" action="<%= page_path(@conn, :registration_post) %>" class="form-horizontal" method="post">
  <input type="hidden" name="_csrf_token" value="<%= csrf_token(@conn) %>">
  <input name="_utf8" type="hidden" value="âœ“">

  <div class="form-group">
    <label for="reg_first_name" class="col-sm-2 control-label">Your Name</label>
    <div class="col-sm-10">
      <input class="form-control" id="employee_name" name="employee[name]" placeholder="Your Full Name" type="text">
    </div>
  </div>
  <div class="form-group">
    <label for="reg_email" class="col-sm-2 control-label">Your Email</label>
    <div class="col-sm-10">
      <input class="form-control" id="employee_email" name="employee[email]" placeholder="We won't give it to anyone, promise!" type="text">
    </div>
  </div>
  <div class="form-group">
    <label for="reg_company_name" class="col-sm-2 control-label">Company Name</label>
    <div class="col-sm-10">
      <input class="form-control" id="company_name" name="company[company_name]" placeholder="The name of your company" type="text">

    </div>
  </div>
